<div class="extra-pagination inner">
  {{pagination}}
</div>
{{#foreach posts}}
<article class="{{post_class}}">
  <header class="post-header">
    <h2 class="post-title">
      <a href="{{url}}">{{{title}}}</a>
    </h2>
  </header>
  <section class="post-excerpt">
    <p>
      {{excerpt words="26"}}<a class="read-more" href="{{url}}">&raquo;</a>
    </p>
  </section>
  <footer class="post-meta">
    {{#if author.image}}<img alt="{{author.name}}" class="author-thumb" nopin="nopin" src="{{author.image}}" />{{/if}}{{author}}{{tags prefix=" on "}}<time class="post-date" datetime="{{date}}">{{date format="DD MMMM YYYY"}}    </time>
  </footer>
</article>
{{/foreach}}{{pagination}}
